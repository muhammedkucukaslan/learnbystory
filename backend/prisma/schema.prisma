generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String
  languages Language[]
  interests String[]
  results   Result[]
  createdAt DateTime   @default(now())
  Story     Story[]
}

model Question {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  text          String
  answer        String
  options       String[]
  correctAnswer Int
  storyId       String   @db.ObjectId
  story         Story    @relation(fields: [storyId], references: [id])
  createdAt     DateTime @default(now())
}

model Story {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  level      String
  interest   String
  language   String
  length     Int
  difficulty String
  userId     String     @db.ObjectId
  user       User       @relation(fields: [userId], references: [id])
  result     Result?
  createdAt  DateTime   @default(now())
  resultId   String?    @db.ObjectId
  Question   Question[]
}

model Result {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  score     Int
  createdAt DateTime @default(now())
  storyId   String   @unique @db.ObjectId
  story     Story    @relation(fields: [storyId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Language {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  language  String
  level     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
